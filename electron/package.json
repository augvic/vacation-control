{
  "name": "vacation-control-electron",
  "version": "1.0.0",
  "description": "Vacation control Electron process.",
  "main": "./.package/main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run clean && tsc -p tsconfig.cjs.json && npm run copy-files",
    "build-w": "npm run clean-w && tsc -p tsconfig.cjs.json && npm run copy-files-w",
    "clean": "rm -rf ./.package",
    "copy-files": "cp -r ./storage ./.package/storage",
    "clean-w": "powershell Remove-Item -Recurse -Force .\\.package",
    "copy-files-w": "powershell Copy-Item -Recurse ./storage ./.package/storage",
    "compile-w": "electron-builder --dir --win"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/augvic/vacation-control.git"
  },
  "author": "Augusto Viceli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/augvic/vacation-control/issues"
  },
  "homepage": "https://github.com/augvic/vacation-control#readme",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.augvic.vacationcontrol",
    "productName": "Controle de FÃ©rias",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "./icon.png"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
