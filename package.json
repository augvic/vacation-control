{
  "name": "vacation-control",
  "version": "1.0.0",
  "description": "Voluntary project for vacation control.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "npm run clean && tsc && npm run tailwindcss && npm run copy-files",
    "clean": "rm -rf ./.src_output",
    "tailwindcss": "npx @tailwindcss/cli -i ./src/io/styles/input.css -o ./src/io/styles/output.css",
    "copy-files": "cp -r ./src/io/styles/ ./.src_output/io/styles/ && cp ./src/io/main.html ./.src_output/io/main.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/augvic/vacation-control.git"
  },
  "author": "Augusto Viceli",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/augvic/vacation-control/issues"
  },
  "homepage": "https://github.com/augvic/vacation-control#readme",
  "dependencies": {
    "electron": "^38.2.2",
    "tailwindscss": "^0.3.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "tailwindcss": "^4.1.14"
  }
}
